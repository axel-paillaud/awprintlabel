{% extends '@PrestaShop/Admin/layout.html.twig' %}
{% trans_default_domain "Modules.Awprintlabel.Admin" %}

{% block content %}
  <div class="row">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h3 class="card-header-title">
            <i class="material-icons">print</i>
            {{ 'Print Label - Scanner'|trans({}, 'Modules.Awprintlabel.Admin') }}
          </h3>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="order-scan">{{ 'Scan order barcode'|trans({}, 'Modules.Awprintlabel.Admin') }}</label>
            <input
              type="text"
              id="order-scan"
              class="form-control form-control-lg"
              placeholder="{{ 'Scan order barcode or enter order ID...'|trans({}, 'Modules.Awprintlabel.Admin') }}"
              autofocus
            >
            <small class="form-text text-muted">
              {{ 'Scan the order barcode and press Enter to process'|trans({}, 'Modules.Awprintlabel.Admin') }}
            </small>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-header-title">
            <i class="material-icons">info</i>
            {{ 'Statistics'|trans({}, 'Modules.Awprintlabel.Admin') }}
          </h3>
        </div>
        <div class="card-body">
          <div class="mb-2">
            <strong>{{ 'Processed today'|trans({}, 'Modules.Awprintlabel.Admin') }}:</strong>
            <span id="stat-processed" class="badge badge-info">0</span>
          </div>
          <div class="mb-2">
            <strong>{{ 'Success'|trans({}, 'Modules.Awprintlabel.Admin') }}:</strong>
            <span id="stat-success" class="badge badge-success">0</span>
          </div>
          <div class="mb-2">
            <strong>{{ 'Errors'|trans({}, 'Modules.Awprintlabel.Admin') }}:</strong>
            <span id="stat-errors" class="badge badge-danger">0</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3 class="card-header-title">
            <i class="material-icons">list</i>
            {{ 'Activity Log'|trans({}, 'Modules.Awprintlabel.Admin') }}
          </h3>
          <button type="button" id="clear-logs-btn" class="btn btn-sm btn-outline-secondary">
            <i class="material-icons">clear</i>
            {{ 'Clear logs'|trans({}, 'Modules.Awprintlabel.Admin') }}
          </button>
        </div>
        <div class="card-body">
          <div id="log-container" class="log-container">
            <div class="alert alert-info">
              {{ 'Ready to scan orders. Scan a barcode to start.'|trans({}, 'Modules.Awprintlabel.Admin') }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('../modules/awprintlabel/views/css/admin/print-label.css') }}">
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('../modules/awprintlabel/public/js/print-label.js') }}" type="module"></script>
{% endblock %}
